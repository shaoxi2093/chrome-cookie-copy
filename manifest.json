{
  "manifest_version": 2,
  "name": "cookie同步-开发者",
  "version": "0.0.1",
  "description": "cookie同步，用于本地开发前端项目时，同步其他网站的部分cookie使用",
  "permissions": [
    "cookies",
    "http://*/*",
    "https://*/*",
    "http://localhost:*/*"
  ],
  "icons": {
    "16": "icons/panda_16px.png",
    "32": "icons/panda_32px.png",
    "48": "icons/panda_48px.png",
    "64": "icons/panda_64px.png",
    "128": "icons/panda_128px.png"
  },
  "background": {
    "scripts": ["js/bg.js"]
  },
  "browser_action": {
    "default_icon": "icons/panda_64px.png",
    "default_title": "cookie同步-开发者",
    "default_popup": "index.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["js/bg.js"],
      "css": ["css/indexPage.css"],
      "run_at": "document_start"
    }
  ]
}